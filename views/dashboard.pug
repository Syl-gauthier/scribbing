//- views/dashboard.pug

extends layout.pug

block content
	h1 Dashboard
	section
		h2 My lists
		ul 
			li: b: a(href='/list/new') new list
			-if(user.listsIds) {
			-user.listsIds.forEach(function(list) {
			li
				a(href='/list/'+list._id) #{list.name}	
			- });
			- }
	
	section
		h2 My friends
		ul
			-if(user.friends) {
			-user.friends.forEach(function(friend) {
			li
				a(href='/user/'+friend.id) #{friend.name}	
			- });
			- } else {
			p you don't have any friends yet.
			-}

	section
		h2 Recent words
		p nothing here yet...
